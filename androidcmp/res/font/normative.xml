<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- fontWeight info: https://www.w3.org/TR/css-fonts-3/#font-weight-numeric-values -->

    <!-- regular -->
    <font
        android:font="@font/normativepro_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/normativepro_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic -->
    <font
        android:font="@font/normativepro_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/normativepro_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- light -->
    <font
        android:font="@font/normativepro_light"
        android:fontStyle="normal"
        android:fontWeight="300"

        app:font="@font/normativepro_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <!-- bold -->
    <font
        android:font="@font/normativepro_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/normativepro_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

</font-family>