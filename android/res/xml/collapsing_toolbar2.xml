<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/collapsed"
        motion:constraintSetStart="@+id/expanded" >

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/rvlist"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.3"
                motion:framePosition="50"
                motion:target="@id/stocks" />

            <KeyAttribute
                android:alpha="0.1"
                motion:framePosition="50"
                motion:target="@id/title_2nd" />
        </KeyFrameSet>

    </Transition>


    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/toolbar_image"
            android:layout_height="150dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1.0">

        </Constraint>


        <Constraint
            android:id="@id/title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="15dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>



        <Constraint
            android:id="@id/title_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="10dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/title_main"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>


        <Constraint
            android:id="@id/image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="70dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/title_2nd">

        </Constraint>

        <Constraint
            android:id="@id/stocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="15dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/image"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>


        <!--
        -->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/toolbar_image"
            android:layout_height="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0">

        </Constraint>


        <Constraint
            android:id="@id/title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="0dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_image"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/toolbar_image">
        </Constraint>


        <Constraint
            android:id="@id/title_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="0dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_image"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/toolbar_image">
        </Constraint>


        <Constraint
            android:id="@id/image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="70dp"
            android:alpha="0.0"
            motion:layout_constraintBottom_toBottomOf="@id/toolbar_image"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/toolbar_image">
        </Constraint>

        <Constraint
            android:id="@id/stocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="0dp"
            android:alpha="0"

            motion:layout_constraintBottom_toBottomOf="@id/toolbar_image"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/toolbar_image">
        </Constraint>


        <!--
        -->

    </ConstraintSet>



</MotionScene>