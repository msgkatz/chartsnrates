<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Splash theme. -->
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppThemeSplash.BrandedLaunch" parent="AppThemeSplash">
        <item name="android:windowBackground">@drawable/branded_logo</item>
        <!--<item name="android:background">@drawable/branded_logo</item>-->
        <!--<item name="colorPrimary">@color/theme_governor_bay</item>
        <item name="colorPrimaryDark">@color/theme_governor_bay</item>-->

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AnimatedChangeActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_right</item>
    </style>

    <style
        name="AnimatedActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimatedChangeActivity</item>
    </style>

    <style name="GdxTheme" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>

        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/main_tabs_text_selected</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>

    </style>
    <!--
    <item name="tabBackground">@color/ma_bn_background</item>
    -->

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/main_tabs_text_appearance</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
